        <Image HorizontalAlignment="Left" Height="130" Margin="21,17,0,0" VerticalAlignment="Top" Width="130" Source="icon.png"/>
        <Rectangle Fill="#FF19D3DA" HorizontalAlignment="Left" Height="12" Stroke="Black" VerticalAlignment="Top" Width="500"/>
