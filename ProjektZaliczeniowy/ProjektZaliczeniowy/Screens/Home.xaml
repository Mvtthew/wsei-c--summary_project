        <TextBlock HorizontalAlignment="Left" Margin="10,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="10" Text="Sprzedaj"/>
        <Button Content="ZAREZERWUJ 🖥" HorizontalAlignment="Left" Margin="10,294,0,0" VerticalAlignment="Top" Width="150" Background="#FF686D76" FontSize="18" Height="35" IsCancel="True" Foreground="White" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="10" Text="Zarezerwuj"/>
        <Image HorizontalAlignment="Left" Height="130" Margin="21,17,0,0" VerticalAlignment="Top" Width="130" Source="icon.png"/>
    </Grid>
</Page>
